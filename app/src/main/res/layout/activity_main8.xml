<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/greybackground"
    tools:context=".MainActivity8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#000000"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ticketsSelection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="tickets selection"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/paymentDetails"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="payment details"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/approval"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="approval"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/sum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="summary"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        android:text="Tickets Selection"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/infoOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold|italic"
        android:text="before orderind, it's important to know:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/infoTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        android:text="- The order cannot be canceled once it has been confirmed"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/infoThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        android:text="- Please do not sit in different places than the places you booked"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/infoFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        android:text="- No discounts"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="tickets selection"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="payment details"
            android:textColor="#000000"
            android:textSize="15sp" />


    </LinearLayout>
</LinearLayout>