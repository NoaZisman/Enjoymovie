<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1E1E1"
    tools:context=".MainActivity9_paymentdetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:background="#000000"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ticketsSelection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="tickets selection"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/paymentDetails"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="payment details"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/approval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#000000"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="approval"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/sum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="summary"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stoptv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="265dp"
            android:fontFamily="sans-serif-condensed"
            android:text="stop"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/playtv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="play"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginRight="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginLeft="275dp"
            android:backgroundTint="#E1E1E1"
            android:drawableRight="@drawable/stop_music" />
        <Button
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:backgroundTint="#E1E1E1"
            android:drawableLeft="@drawable/play_music"
            android:layout_marginRight="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        android:text="Personal Information"
        android:textColor="#000000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/asteriskoneOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/firstnamebuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=" first name"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/asteriskoneTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/lastnamebuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=" last name"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/firstnamebuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/costume_edittext"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="first name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/lastnamebuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:hint="last name"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@drawable/costume_edittext"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawablePadding="10dp"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/asteriskoneTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/emailbuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=" email"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/asteriskoneFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/phonenumberbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-condensed"
            android:text=" phone number"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/emailbuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/costume_edittext"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="email"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/phonenumberbuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:hint="phone number"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@drawable/costume_edittext"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawablePadding="10dp"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/titlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:fontFamily="sans-serif-condensed"
        android:text="Payment Details"
        android:textColor="#000000"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/asteriskoneFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/wayofpaymentbuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=" way of payment"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/asteriskoneSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/cardnumberbuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=" card number"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/asteriskoneSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/cardvaliditybuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=" card validity"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/asteriskoneEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-condensed"
            android:text="*"
            android:textColor="#BF1F1F"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/threedigitsbuy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=" 3 digits"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/wayofpaymentbuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:background="@drawable/costume_edittext"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="first name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cardnumberbuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:hint="last name"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:background="@drawable/costume_edittext"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawablePadding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cardvaliditybuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/costume_edittext"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="card validity"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/threedigitsbuyed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/costume_edittext"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="first name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toapproval"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#E68A01"
            android:text="continue"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:textSize="20sp" />
        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="#FFFFFF"
            android:text="back"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>