<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movie_image_popcorn"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/chewy"
        android:text="Enjoy A Movie"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:text="This app only refers to a movie theater in Rishon Lezion"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

        <Button
            android:id="@+id/gotoactivity4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="left"
            android:scaleType="center"
            android:text="start"
            android:backgroundTint="#2A3361"
            android:textColor="#CFD8FF"
            android:textSize="30sp" />

</LinearLayout>